%%% -*- mode: erlang -*-
{application, riakc_poolboy,
 [
  {description, "Simple Riak PB connection pool"},
  {vsn, "1.2.2"},
  {registered, []},
  {applications, [
                  kernel,
                  stdlib,
                  riakc,
                  poolboy,
                  folsom
                 ]},
  {mod, { riakc_poolboy_app, []}},
  {env, [
         {pools, [
                  {riak_pool,
                   [
                    {size, 10},
                    {max_overflow, 20}
                   ],
                   [
                    {hostname, "127.0.0.1"},
                    {port, 8087},
                    {ping_every, undefined},
                    {options, [{auto_reconnect, true}]}
                   ]}
                 ]},
         {reconnect_retries, 10},
         {reconnect_delay, 450}
        ]}
 ]}.
